{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "permissions": {
    "allow": [
      "Bash(poetry run ruff:*)",
      "WebSearch",
      "WebFetch",
      "Read",
      "Task"
    ],
    "deny": [],
    "ask": []
  },
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "Write|Edit|MultiEdit",
        "hooks": [
          {
            "type": "command",
            "command": "$HOME/.claude/scripts/tdd-enforcement-hook.sh"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "mcp__*",
        "hooks": [
          {
            "type": "command",
            "command": "$HOME/.claude/scripts/track-mcp-usage.sh"
          }
        ]
      }
    ],
    "SessionStart": []
  },
  "feedbackSurveyState": {
    "lastShownTime": 1754083719175
  },
  "sandbox": {
    "enabled": false
  }
}
